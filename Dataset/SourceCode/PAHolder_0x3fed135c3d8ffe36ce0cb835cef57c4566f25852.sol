        _id := mload(add(add(ids, 0x20), mul(i, 0x20)))
      }
      if (isHeld(_to, _id) && tokenOwner[_to].remove(_id)) {
        success[i] = true;
        tokenContract.transferFrom(address(this), _to, _id);
      } else {
        success[i] = false;
      }
      unchecked {
        ++i;
      }
    }
  }

