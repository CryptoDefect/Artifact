pragma solidity ^0.8.17;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";

interface IRenderer {
  function imageData(uint256 dna) external view returns (string memory);
}

contract ERC721OnChainMetadata is AccessControlEnumerable {

    using Strings for uint256;

    struct AttributeInfo {
      uint256 trait_type_index;
      string trait_type;
      uint256 trait_value_index;
      string trait_value;
    }

    // https://docs.opensea.io/docs/metadata-standards
    struct Metadata {
      string name;
      string description;
      string external_url;
      //string image computed: basePath + dna + extension
      string image_base_uri;
      string image_extension;

      address image_data;
      string animation_url;
      // attributes
    }

    // encoding-ordered list of trait types
    string[] public trait_types;

    // trait_type => index => value
    mapping(uint256 => mapping(uint256 => string)) public traitValues;

    // allow to customize metadata per token
    mapping(uint256 => string) public names;
    mapping(uint256 => string) public descriptions;

    Metadata public metadata;

    // 8 bits per trait
    // 255 = 1111 1111
    uint256 constant TRAIT_MASK = 255;

    // A C C E S S   C O N T R O L

    /**
     * We create this role for a minter to be able 
     * to mint new tokens and extends the metadata accordingly
     */
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    modifier onlyMinter {
      require(
           hasRole(MINTER_ROLE, _msgSender())
        || hasRole(DEFAULT_ADMIN_ROLE, _msgSender())
      , "ERC721Access: must have Minter role");
      _;
    }

    // C O N S T R U C T O R

    constructor() { 
      _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    // U T I L S

    function _compareStrings(string memory a, string memory b) internal pure returns (bool) {
      return (keccak256(abi.encodePacked((a))) == keccak256(abi.encodePacked((b))));
    }

    // O W N E R

    function setTraitType(uint8 trait_type_index, string memory value) public onlyMinter {
      trait_types[trait_type_index] = value;
    }

    function writeTraitTypes(string[] memory _trait_types) public onlyMinter  {
      // TODO restrict to num slots
      for (uint8 index = 0; index < _trait_types.length; index++) {
        trait_types.push( _trait_types[index] );
      }
    }

    /**
     * Add or update a trait value
     */
    function setTraitValue(uint256 trait_type_index, uint256 trait_value_index, string memory value) public onlyMinter {
      traitValues[trait_type_index][trait_value_index] = value;
    }

    /**
     * Batch add or update trait values
     */
    function writeTraitValues(uint8 trait_type_index, uint8 start, uint256 length, string[] memory trait_values) public onlyMinter {
      for (uint8 index = 0; index < length; index++) {
        setTraitValue(trait_type_index, start+index, trait_values[index]);
      }
    }

    /**
     * Batch add trait types and values
     * should mostly be OPEN/CLOSED
     * extension: yes, modification: no
     */
    function extendMetadata(AttributeInfo[] calldata traitInfo) public onlyMinter {
      for (uint256 index = 0; index < traitInfo.length; index++) {
        AttributeInfo memory info = traitInfo[index];

        // add new trait_type if it not exists
        if (trait_types.length <= info.trait_type_index) {
          // create new trait type if not exists
          string[] memory new_trait_type = new string[](1);
          new_trait_type[0] = info.trait_type;
          // append trait type
          writeTraitTypes(new_trait_type);
        }

        // add new trait values that don't exist
        bool doesTraitValueExist = _compareStrings(info.trait_value, traitValues[info.trait_type_index][info.trait_value_index]);
        if (!doesTraitValueExist) {
          setTraitValue(info.trait_type_index, info.trait_value_index, info.trait_value);
        }

      }
    }

    function setMetadata(Metadata memory _metadata) public onlyMinter {
      metadata = _metadata;
    }

    function setName(string memory name) public onlyMinter {
      metadata.name = name;
    }

    function setNames(uint[] memory dna, string[] memory _names) public onlyMinter {
      require(dna.length == _names.length, "Arrays must have same length");
      for (uint8 index = 0; index < dna.length; index++) {
        names[dna[index]] = _names[index];
      }
    }

    function setDescription(string memory description) public onlyMinter {
      metadata.description = description;
    }

    function setDescriptions(uint[] memory dna, string[] memory _descriptions) public onlyMinter {
      require(dna.length == _descriptions.length, "Arrays must have same length");
      for (uint8 index = 0; index < dna.length; index++) {
        descriptions[dna[index]] = _descriptions[index];
      }
    }

    function setExternalUrl(string memory external_url) public onlyMinter {
      metadata.external_url = external_url;
    }

    function setImage(string memory image_base_uri, string memory image_extension) public onlyMinter {
      metadata.image_base_uri = image_base_uri;
      metadata.image_extension = image_extension;
    }

    function setImageData(address imageData) public onlyMinter {
      metadata.image_data = imageData;
    }

    function setAnimationUrl(string memory animation_url) public onlyMinter {
      metadata.animation_url = animation_url;
    }

    // P U B L I C
    function dnaToTraits(uint256 dna) public view returns (AttributeInfo[] memory) {
      uint256 trait_count = trait_types.length;
      AttributeInfo[] memory attributes = new AttributeInfo[](trait_count);
      for (uint256 i = 0; i < trait_count; i++) {
        uint256 bitMask = TRAIT_MASK << (8 * i);
        uint256 trait_value_index = (dna & bitMask) >> (8 * i);
        string memory value = traitValues[i][trait_value_index];
        attributes[i] = AttributeInfo(i, trait_types[i], trait_value_index, value);
      }
      return attributes;
    }

    function getAttributesJson(uint256 dna) internal view returns (string memory) {
      AttributeInfo[] memory _traits = dnaToTraits(dna);
      uint8 trait_count = uint8(trait_types.length);
      string memory attributes = '[\n';
      for (uint8 i = 0; i < trait_count; i++) {
        if(i < 4) {
          attributes = string(abi.encodePacked(attributes,
            (i > 0) ? ',' : '', '{"trait_type": "', _traits[i].trait_type, '", "value": "', _traits[i].trait_value,'"}','\n'
          ));
        } else {
          // hide optional attributes from metadata if value is 'None' = index 0
          if(_traits[i].trait_value_index > 0) {
            attributes = string(abi.encodePacked(attributes,
              (i > 0) ? ',' : '', '{"trait_type": "', _traits[i].trait_type, '", "value": "', _traits[i].trait_value,'"}','\n'
            ));
          }
        }
      }
      return string(abi.encodePacked(attributes, ']'));
    }

    function getImage(uint256 dna) internal view returns (string memory) {
      return bytes(metadata.image_base_uri).length > 0 ? string(abi.encodePacked(metadata.image_base_uri, dna.toString(), metadata.image_extension)) : "";
    }

    function getImageData(uint256 dna) internal view returns (string memory) {
      if (metadata.image_data != address(0x0)) {
        return IRenderer(metadata.image_data).imageData(dna);
      }
      return "";
    }

    function getMetadataJson(uint256 tokenId, uint256 dna) public view returns (string memory){
      string memory attributes = getAttributesJson(dna);
      string memory image_data = getImageData(dna);

      // overwite standard name if it's set
      bytes memory n = bytes(names[dna]);
      string memory name = n.length == 0 ? string(abi.encodePacked(metadata.name,' #', tokenId.toString())) : names[dna];

      // overwite standard description if it's set
      bytes memory d = bytes(descriptions[dna]);
      string memory description = d.length == 0 ? metadata.description : descriptions[dna];

      string memory meta = string(
        abi.encodePacked(
          '{\n"name": "', name,
          '"\n,"description": "', description,
          '"\n,"attributes":', attributes,
          '\n,"external_url": "', metadata.external_url
        )
      );
      
      if (bytes(metadata.animation_url).length > 0) {
        meta = string(
          abi.encodePacked(
            meta,
            '"\n,"animation_url": "', metadata.animation_url, '/', tokenId.toString()
          )
        );
      }
      if (bytes(metadata.image_base_uri).length > 0) {
        meta = string(
          abi.encodePacked(
            meta,
            '"\n,"image": "', getImage(dna)
          )
        );
      } 
      else if(bytes(image_data).length > 0) {
        meta = string(
          abi.encodePacked(
            meta,
            '"\n,"image_data": "', image_data
          )
        );
      }

      return string(
        abi.encodePacked(
          meta,
          '"\n}'
        )
      );
    }

    function tokenURI(uint256 tokenId, uint256 dna) public view returns (string memory) {
      string memory json = Base64.encode(bytes(getMetadataJson(tokenId, dna)));
      string memory output = string(
        abi.encodePacked("data:application/json;base64,", json)
      );
      return output;
    }

}

