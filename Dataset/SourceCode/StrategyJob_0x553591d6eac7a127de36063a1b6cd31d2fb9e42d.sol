  /// @inheritdoc IKeep3rJob
  function setKeep3r(IKeep3r _keep3r) public onlyGovernor {
    _setKeep3r(_keep3r);
  }

  function _setKeep3r(IKeep3r _keep3r) internal {
    keep3r = _keep3r;
    emit Keep3rSet(_keep3r);
  }

