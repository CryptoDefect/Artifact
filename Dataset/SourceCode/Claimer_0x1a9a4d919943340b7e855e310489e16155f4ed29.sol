contract Claimer is Ownable {
    using SafeERC20 for IERC20;

    address public hft;
    address public signerAddress;

    /// @notice A record of states for signing / validating signatures
    mapping(address => uint256) public nonces;
    mapping(address => uint256) public lastClaimed;

    bool internal _killswitch;

    event ClaimHFT(
        address indexed sender,
        uint256 indexed amount,
        uint256 indexed nonce
    );

    event WithdrawHFT(address hft, address recipient, uint256 amount);

    event UpdateSigner(address newSigner, address oldSigner);

    event UpdateKillswitch(bool killswitch);

    /**
     * @notice Construct a new HFT Claimer contract
     * @param _hft Hashflow token address
     * @param _signer authorized signer to sign all the claim payloads
     */
    constructor(address _hft, address _signer) {
        require(
            _hft != address(0),
            'Claimer::constructor: hft cannot be 0 address'
        );
        require(
            _signer != address(0),
            'Claimer::constructor: signer cannot be 0 address'
        );
        hft = _hft;
        signerAddress = _signer;

        _killswitch = true;
    }

    function updateKillswitch(bool killswitch) external onlyOwner {
        emit UpdateKillswitch(killswitch);

        _killswitch = killswitch;
    }

    function withdrawHFT(uint256 amount) external onlyOwner {
        emit WithdrawHFT(hft, msg.sender, amount);

        IERC20(hft).safeTransfer(msg.sender, amount);
    }

    function withdrawAllHFT() external onlyOwner {
        uint256 balance = IERC20(hft).balanceOf(address(this));

        emit WithdrawHFT(hft, msg.sender, balance);
        IERC20(hft).safeTransfer(msg.sender, balance);
    }

    /**
     * @notice Claim HFTs by providing a valid digest
     * @param amount Deposit amount
     * @param deadline time after which the siguture is invalid
     * @param v The recovery byte of the signature
     * @param r Half of the ECDSA signature pair
     * @param s Half of the ECDSA signature pair
     */
    function claimHFT(
        uint256 amount,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external {
        require(
            block.timestamp <= deadline,
            'Claimer::claimHFT: signature expired'
        );
        require(
            block.timestamp - lastClaimed[msg.sender] >= 1 days,
            'Claimer::claimHFT: HFT can only be claimed once a day'
        );
        require(_killswitch, 'Claimer::claimHFT: Killswitch is off.');
        lastClaimed[msg.sender] = block.timestamp;

        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19Ethereum Signed Message:\n32',
                keccak256(
                    abi.encodePacked(
                        address(this),
                        hft,
                        msg.sender,
                        amount,
                        deadline,
                        nonces[msg.sender]++
                    )
                )
            )
        );

        bytes memory signature = abi.encodePacked(r, s, v);

        require(
            ECDSA.recover(digest, signature) == signerAddress,
            'Claimer::claimHFT: Invalid signer'
        );

        IERC20(hft).safeTransfer(msg.sender, amount);

        emit ClaimHFT(msg.sender, amount, (nonces[msg.sender] - 1));
    }

    function updateSigner(address _signer) external onlyOwner {
        require(
            _signer != address(0),
            'Claimer::updateSigner: signer cannot be 0 address'
        );
        emit UpdateSigner(_signer, signerAddress);
        signerAddress = _signer;
    }

    function renounceOwnership() public view override onlyOwner {
        revert('Claimer::renounceOwnership: Cannot renounce ownership');
    }
}