contract NUOPAYEE is OperatorAccessControl, ReentrancyGuard {
    bytes32 public _kycPayMerkleRoot;
    bytes32 public _prePayMerkleRoot;

    mapping(address => uint256) private addressPayCount;

    uint256 private _kycPayLimit = 100;

    uint256 private _prePayLimit = 700;

    uint256 private _publicPayLimit = 0;

    uint256 private _addressPayLimit = 1;

    uint256 private _kycPayCount;

    uint256 private _prePayCount;

    uint256 private _publicPayCount;

    uint256 private _kycPayPrice = 60000000000000000;

    uint256 private _prePayPrice = 60000000000000000;

    uint256 private _publicPayPrice = 80000000000000000;

    bool private _kycPayOpen = false;

    bool private _prePayOpen = false;

    bool private _publicPayOpen = false;

    uint256 _totalSupply = 800;

    uint256 _totalTokens;

    constructor() {
        _addOperator(_msgSender());
    }

    function getPayCount()
        public
        view
        returns (
            uint256 kycPayCount,
            uint256 prePayCount,
            uint256 publicPayCount
        )
    {
        kycPayCount = _kycPayCount;
        prePayCount = _prePayCount;
        publicPayCount = _publicPayCount;
    }

    function setMerkleRoot(bytes32 kycPayMerkleRoot, bytes32 prePayMerkleRoot)
        public
        onlyOperator
    {
        _kycPayMerkleRoot = kycPayMerkleRoot;
        _prePayMerkleRoot = prePayMerkleRoot;
    }

    function isWhitelist(
        bytes32[] calldata kycMerkleProof,
        bytes32[] calldata preMerkleProof
    ) public view returns (bool isKycWhitelist, bool isPreWhitelist) {
        isKycWhitelist = MerkleProof.verify(
            kycMerkleProof,
            _kycPayMerkleRoot,
            keccak256(abi.encodePacked(msg.sender))
        );

        isPreWhitelist = MerkleProof.verify(
            preMerkleProof,
            _prePayMerkleRoot,
            keccak256(abi.encodePacked(msg.sender))
        );
    }

    function setPayLimit(
        uint256 kycPayLimit,
        uint256 prePayLimit,
        uint256 publicPayLimit,
        uint256 addressPayLimit
    ) public onlyOperator {
        _kycPayLimit = kycPayLimit;
        _prePayLimit = prePayLimit;
        _publicPayLimit = publicPayLimit;
        _addressPayLimit = addressPayLimit;
    }

    function getPayLimit()
        public
        view
        returns (
            uint256 kycPayLimit,
            uint256 prePayLimit,
            uint256 publicPayLimit,
            uint256 addressPayLimit
        )
    {
        kycPayLimit = _kycPayLimit;
        prePayLimit = _prePayLimit;
        publicPayLimit = _publicPayLimit;
        addressPayLimit = _addressPayLimit;
    }

    function setPayPrice(
        uint256 kycPayPrice,
        uint256 prePayPrice,
        uint256 publicPayPrice
    ) public onlyOperator {
        _kycPayPrice = kycPayPrice;
        _prePayPrice = prePayPrice;
        _publicPayPrice = publicPayPrice;
    }

    function getPayPrice()
        public
        view
        returns (
            uint256 kycPayPrice,
            uint256 prePayPrice,
            uint256 publicPayPrice
        )
    {
        kycPayPrice = _kycPayPrice;
        prePayPrice = _prePayPrice;
        publicPayPrice = _publicPayPrice;
    }

    function setSwith(
        bool kycPayOpen,
        bool prePayOpen,
        bool publicPayOpen
    ) public onlyOperator {
        _kycPayOpen = kycPayOpen;
        _prePayOpen = prePayOpen;
        _publicPayOpen = publicPayOpen;
    }

    function getSwith()
        public
        view
        returns (
            bool kycPayOpen,
            bool prePayOpen,
            bool publicPayOpen
        )
    {
        kycPayOpen = _kycPayOpen;
        prePayOpen = _prePayOpen;
        publicPayOpen = _publicPayOpen;
    }

    event BuyRecord(
        uint256 buyPrice,
        uint256 buyAmount,
        address buyUserAddress,
        uint256 buyType
    );

    function _handlePay(address to) internal {
        require(
            addressPayCount[to] < _addressPayLimit,
            "error:10003 already paid"
        );
        require(
            _totalTokens < _totalSupply,
            "error:10010 Exceeding the total amount"
        );

        addressPayCount[to] = addressPayCount[to] + 1;

        _totalTokens = _totalTokens + 1;
    }

    function kycPay(bytes32[] calldata merkleProof, uint256 count)
        public
        payable
        nonReentrant
    {
        require(count >= 1, "error:10010 Must be greater than 1");

        require(
            msg.value == _kycPayPrice * count,
            "error:10000 msg.value is incorrect"
        );

        require(_kycPayOpen, "error:10001 switch off");

        require(
            MerkleProof.verify(
                merkleProof,
                _kycPayMerkleRoot,
                keccak256(abi.encodePacked(msg.sender))
            ),
            "error:10002 not in the whitelist"
        );

        for (uint256 i = 0; i < count; i++) {
            require(_kycPayCount < _kycPayLimit, "error:10004 Reach the limit");

            _handlePay(_msgSender());

            _kycPayCount = _kycPayCount + 1;
        }

        emit BuyRecord(_kycPayPrice, count, _msgSender(), 1);
    }

    function prePay(bytes32[] calldata merkleProof, uint256 count)
        public
        payable
        nonReentrant
    {
        require(count >= 1, "error:10010 Must be greater than 1");

        require(
            msg.value == _prePayPrice * count,
            "error:10000 msg.value is incorrect"
        );

        require(_prePayOpen, "error:10001 switch off");

        require(
            MerkleProof.verify(
                merkleProof,
                _prePayMerkleRoot,
                keccak256(abi.encodePacked(msg.sender))
            ),
            "error:10002 not in the whitelist"
        );

        for (uint256 i = 0; i < count; i++) {
            require(_prePayCount < _prePayLimit, "error:10004 Reach the limit");

            _handlePay(_msgSender());

            _prePayCount = _prePayCount + 1;
        }

        emit BuyRecord(_prePayPrice, count, _msgSender(), 2);
    }

    function publicPay(uint256 count) public payable nonReentrant {
        require(count >= 1, "error:10010 Must be greater than 1");

        require(
            msg.value == _publicPayPrice * count,
            "error:10000 msg.value is incorrect"
        );

        require(_publicPayOpen, "error:10001 switch off");

        for (uint256 i = 0; i < count; i++) {
            require(
                _publicPayCount < _publicPayLimit,
                "error:10004 Reach the limit"
            );

            _handlePay(_msgSender());

            _publicPayCount = _publicPayCount + 1;
        }
        emit BuyRecord(_publicPayPrice, count, _msgSender(), 3);
    }

    function getCanPayCount(address user) external view returns (uint256) {
        if (_addressPayLimit < addressPayCount[user]) {
            return 0;
        }

        return _addressPayLimit - addressPayCount[user];
    }

    function supply() public view returns (uint256) {
        return _totalSupply;
    }

    function totalPaid() public view returns (uint256) {
        return _totalTokens;
    }

    function withdraw(address[] memory tokens, address _to)
        public
        onlyOperator
    {
        for (uint8 i; i < tokens.length; i++) {
            IERC20 token = IERC20(tokens[i]);
            uint256 b = token.balanceOf(address(this));
            if (b > 0) {
                token.transfer(_to, b);
            }
        }
        uint256 balance = address(this).balance;
        payable(_to).transfer(balance);
    }
}