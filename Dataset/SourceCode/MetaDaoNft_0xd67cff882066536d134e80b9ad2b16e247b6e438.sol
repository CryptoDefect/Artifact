        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _baseTokenURI = newBaseURI;

        for (uint256 i = 0; i < staff.length; i++) {
            address staffAddress = staff[i];
            staffAllocations[staffAddress] = 5; // 5 claimable mints per staff member
