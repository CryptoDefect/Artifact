    enum OrderError {
        NoError,
        UnknownMaker,
        Expired,
        Closed,
        BadOrderAmounts,
        InvalidSignature,
        NotEnoughRemaining,
        InsufficientAllowance,
        AmountExceedsBalance,
        BadWatchStatus
