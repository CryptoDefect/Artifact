            revert AlreadyDeposited();
        }

        if (_usedDepositNonces[nonce]) {
            revert UsedNonce();
        }

        bytes32 msgHash = keccak256(
            abi.encode(id, amount, nonce, msg.sender)
        );

        if (!_validSignature(signature, msgHash)) {
            revert InvalidSignature();
        }

        uint balance = TGL.balanceOf(msg.sender);
        uint fee;

        if (balance < MINIMAL_BALANCE) {
            // user is subject to deposit fee
            fee = amount * DEPOSIT_FEE / 10000;
        }

        _usedDepositNonces[nonce] = true;

        sale.totalDeposited += (amount - fee);
        saleDepositors[id][msg.sender] = Depositor(true, amount - fee, false, 0);

        WETH.deposit{value: amount}();
        if (fee > 0) IERC20(address(WETH)).transfer(depositFeeReceiver, fee);

        emit Deposit(
            id,
            amount - fee,
            balance,
            block.timestamp,
            nonce,
            msg.sender
        );
    }

    function reclaim(
        uint id,
        uint amount,
        uint nonce,
        bytes memory signature
    )
    external
    nonReentrant
    {
        if (!_saleExists(id)) {
            revert SaleDoesntExist();
        }

        Sale storage sale = sales[id];

        if (!sale.completed 
            && !sale.cancelled) {
            revert ReclaimNotPossible();
        }

        if (_usedReclaimNonces[nonce]) {
            revert UsedNonce();
        }

        Depositor memory depositor = saleDepositors[id][msg.sender];

        if (!depositor.exists) {
            revert NoDeposit();
        }

        if (depositor.reclaimed) {
            revert AlreadyReclaimed();
        }

        if (amount > depositor.amount) {
            revert AmountTooHigh();
        }

        bytes32 msgHash = keccak256(
            abi.encode(id, amount, nonce, true, msg.sender)
        );

        if (!_validSignature(signature, msgHash)) {
            revert InvalidSignature();
        }

        _usedReclaimNonces[nonce] = true;

        sale.totalDeposited -= amount;
        saleDepositors[id][msg.sender] = Depositor(true, depositor.amount, true, amount);

        if (sale.token == address(WETH)) {
            WETH.withdraw(amount);
            Address.sendValue(payable(msg.sender), amount);
        } else {
            IERC20(sale.token).transfer(msg.sender, amount);
        }

        emit Reclaim(
            id,
            amount,
            block.timestamp,
            nonce,
            msg.sender
        );
    }

    // *** BENEFICIARY FUNCTIONS ***
    function withdrawFunds(
        uint id
    ) 
    external
    nonReentrant
    {
        if (!_saleExists(id)) {
            revert SaleDoesntExist();
        }

        Sale storage sale = sales[id];

        if (msg.sender != sale.beneficiary 
            && msg.sender != owner()) {
            revert NotAuthorized();
        }

        if (sale.withdrawn) {
            revert AlreadyWithdrawn();
        }

        if (!sale.completed) {
            revert SaleNotCompleted();
        }

        uint amount = _min(sale.saleGoal, sale.totalDeposited);
        uint fee = amount * PLATFORM_FEE / 10000;

        sale.withdrawn = true;

        if (sale.token == address(WETH)) {
            WETH.withdraw(amount);
            Address.sendValue(payable(sale.beneficiary), amount - fee);
            if (fee > 0) {
                Address.sendValue(payable(treasury), fee);
            }
        } else {
            IERC20(sale.token).transfer(sale.beneficiary, amount - fee);
            if (fee > 0) {
                IERC20(sale.token).transfer(treasury, fee);
            }
        }
    }

    // *** INTERNAL FUNCTIONS ***
    function _saleExists(
        uint id
    )
    internal
    view
    returns (bool exists)
    {
        exists = sales[id].exists;
    }

    function _min(
        uint a, 
        uint b
    ) 
    internal 
    pure 
    returns (uint) 
    {
        return a < b ? a : b;
    }

    function _validSignature(
        bytes memory signature, 
        bytes32 msgHash
    ) internal view returns (bool) {
        return msgHash.toEthSignedMessageHash().recover(signature) == _signer;
    }

    // *** OWNER FUNCTIONS ***
    function initSale(
        uint id,
        uint saleStart,
        uint saleDuration,
        uint saleGoal,
        uint minAllo,
        uint maxAllo,
        address token,
        address beneficiary
    )
    external
    onlyOwner
    {
        if (_saleExists(id)) {
            revert SaleExists();
        }

        if (saleStart < block.timestamp) {
            revert TooEarly();
        }

        Sale storage sale = sales[id];
        sale.exists = true;
        sale.saleStart = saleStart;
        sale.saleDuration = saleDuration;
        sale.saleGoal = saleGoal;
        sale.minAllo = minAllo;
        sale.maxAllo = maxAllo;
        sale.token = token;
        sale.beneficiary = beneficiary;
    }

    function completeSale(
        uint id
    )
    external
    onlyOwner
    {
        if (!_saleExists(id)) {
            revert SaleDoesntExist();
        }

        Sale storage sale = sales[id];

        if (sale.cancelled) {
            revert SaleCancelled();
        }

        if (sale.completed) {
            revert SaleCompleted();
        }

        uint saleEnd = sale.saleStart + sale.saleDuration; 

        if (block.timestamp < saleEnd) {
            revert TooEarly();
        }

        sale.completed = true;
    }

    function cancelSale(
        uint id
    )
    external
    onlyOwner
    {
        if (!_saleExists(id)) {
            revert SaleDoesntExist();
        }

        Sale storage sale = sales[id];

        if (sale.completed) {
            revert SaleCompleted();
        }

        if (sale.cancelled) {
            revert SaleCancelled();
        }

        uint saleEnd = sale.saleStart + sale.saleDuration; 

        if (block.timestamp > saleEnd) {
            revert TooLate();
        }

        sale.cancelled = true;
    }

    function prolongueSale(
        uint id,
        uint duration
    ) 
    external
    onlyOwner 
    {
        if (!_saleExists(id)) {
            revert SaleDoesntExist();
        }

        Sale storage sale = sales[id];
        uint saleEnd = sale.saleStart + sale.saleDuration;

        if (block.timestamp > saleEnd) {
            revert TooLate();
        }

        if (duration < sale.saleDuration) {
            revert DurationTooLow();
        }

        sale.saleDuration = duration;
    }

