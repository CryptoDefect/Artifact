        outToken = IERC20(_quoteToken);
        usdcToken = IERC20(_baseToken);
        _pool = PoolAddress.computeAddress(PoolAddress.getPoolKey(_quoteToken, _baseToken, 3000));
        
    }

    function getDaoNFT() public view returns (address) {
