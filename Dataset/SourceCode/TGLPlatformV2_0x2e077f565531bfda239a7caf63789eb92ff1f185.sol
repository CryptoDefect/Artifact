contract TGLPlatformV2 is Ownable, ReentrancyGuard {
    using SafeMath for uint;
    using ECDSA for bytes32;

    struct Depositor {
        bool exists;
        uint amount;
        bool reclaimed;
        uint reclaimedAmount;
    }

    struct Sale {
        bool exists;
        uint totalDeposited;
        uint saleStart;
        uint saleDuration;
        uint saleGoal;
        uint minAllo;
        uint maxAllo;
        address token;
        bool completed;
        bool cancelled;
        address beneficiary;
        bool withdrawn;
    }

    IERC20 public immutable TGL;
    IWETH public immutable WETH;
    address public treasury;
    address public depositFeeReceiver;
    uint public MINIMAL_BALANCE = 100_000 ether;
    uint public DEPOSIT_FEE = 1000; // 10% of non-holder deposits
    uint public PLATFORM_FEE = 0;
    mapping(uint => Sale) public sales;
    mapping(uint => mapping(address => Depositor)) public saleDepositors;

    address private _signer = address(0x5c95F5FAF92401AE97497F45DEE2F2A04518841f);
    mapping(uint => bool) private _usedDepositNonces;
    mapping(uint => bool) private _usedReclaimNonces;

    error TooEarly();
    error TooLate();
    error InvalidSignature();
    error UsedNonce();
    error AmountNotWithinBounds();
    error AlreadyDeposited();
    error AlreadyReclaimed();
    error SaleDoesntExist();
    error SaleExists();
    error SaleCancelled();
    error SaleCompleted();
    error WrongAmount();
    error WrongFunction();
    error NoDeposit();
    error ReclaimNotPossible();
    error AmountTooHigh();
    error AlreadyWithdrawn();
    error DurationTooLow();
    error SaleNotCompleted();
    error FeeTooHigh();
    error NotAuthorized();

    event Deposit(
        uint id,
        uint amount,
        uint balance,
        uint timestamp,
        uint nonce,
        address indexed account
    );

    event Reclaim(
        uint id,
        uint amount,
        uint timestamp,
        uint nonce,
        address indexed account
    );

    constructor(
        address tgl,
        address weth,
        address _treasury,
        address _depositFeeReceiver
    ) {
        // TGL: 0xCc4450EDEfbBEb450E2f205f4ECEfF7232D54e92
        // WETH: 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
        // TREASURY: 0xe964caB6efdB66395c2A81B375229A9403dc214b
        TGL = IERC20(tgl);
        WETH = IWETH(weth);
        treasury = _treasury;
        depositFeeReceiver = _depositFeeReceiver;
    }

    receive() external payable {
        assert(msg.sender == address(WETH));
    }

    function deposit(
        uint id, 
        uint amount, 
        uint nonce, 
        bytes memory signature
    ) 
    external 
    nonReentrant 
    {
        if (!_saleExists(id)) {
            revert SaleDoesntExist();
        }

        Sale storage sale = sales[id];

        if (sale.cancelled) {
            revert SaleCancelled();
        }

        if (sale.completed) {
            revert SaleCompleted();
        }

        if (amount < sale.minAllo
            || amount > sale.maxAllo) {
            revert AmountNotWithinBounds();
        }

        if (block.timestamp < sale.saleStart) {
            revert TooEarly();
        }

        uint saleEnd = sale.saleStart + sale.saleDuration; 

        if (block.timestamp > saleEnd) {
            revert TooLate();
        }

        if (saleDepositors[id][msg.sender].exists) {
            revert AlreadyDeposited();
        }

        if (_usedDepositNonces[nonce]) {
            revert UsedNonce();
        }

        bytes32 msgHash = keccak256(
            abi.encode(id, amount, nonce, msg.sender)
        );

        if (!_validSignature(signature, msgHash)) {
            revert InvalidSignature();
        }

        uint balance = TGL.balanceOf(msg.sender);
        uint fee;

        if (balance < MINIMAL_BALANCE) {
            // user is subject to deposit fee
            fee = amount * DEPOSIT_FEE / 10000;
        }

        _usedDepositNonces[nonce] = true;

        sale.totalDeposited += (amount - fee);
        saleDepositors[id][msg.sender] = Depositor(true, amount - fee, false, 0);

        IERC20(sale.token).transferFrom(msg.sender, address(this), amount);
        if (fee > 0) IERC20(sale.token).transfer(depositFeeReceiver, fee);

        emit Deposit(
            id,
            amount - fee,
            balance,
            block.timestamp,
            nonce,
            msg.sender
        );
    }

