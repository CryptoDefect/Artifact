        staffAllocations[artist] = 20; // 20 claimable mints for artist

        _setupRole(ARTIST_ROLE, artist);

        for (uint256 i = 0; i < founders.length; i++) {
            _setupRole(FOUNDER_ROLE, founders[i]);
        }
    }

