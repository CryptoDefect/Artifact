    function bidToAsk(uint256 bidTokens, uint256 price)
        public
        pure
        returns (uint256)
    {
        if (price == 0) revert InvalidPrice();
        return
            FixedPointMathLib.mulDivDown(
                bidTokens,
                priceDenominator(),
                price
            );
    }

    /**
     * @notice determine the max of two numbers
