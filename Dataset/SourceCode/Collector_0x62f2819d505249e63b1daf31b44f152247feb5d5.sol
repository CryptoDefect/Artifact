  constructor (uint256 nft0, uint256 nft1)
  {
    _token = _USDT;

    _epoch = IWUSD(_WUSD).snapshot().epoch;

    _pool[_USDT] = Pool({ nft: nft0, pool: _FACTORY.getPool(_GLOVE, _USDT, _ROUTE) });
